{
  "preset": "ts-jest",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": ["**/*.spec.ts"],
  "moduleFileExtensions": [
    "ts",
    "js",
    "vue",
    "json"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest",
    "^.+\\.js$": "babel-jest",
    ".*\\.(vue)$": "vue-jest"
  },
  "snapshotSerializers": [
    "jest-serializer-vue"
  ],
  "collectCoverage": true,
  "coverageDirectory": "report/coverage",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{js,ts,vue}",
    "!<rootDir>/src/entry.ts",
    "!<rootDir>/src/entry.esm.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 10,
      "functions": 10,
      "lines": 10,
      "statements": 10
    }
  }
}