{
  "name": "@jackdomleo7/vue3-components",
  "version": "0.0.0-alpha.0",
  "description": "A Vue 3 component library with Rollup, Storybook, Jest & SCSS.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackdomleo7/Vue_3_Component_Library.git"
  },
  "author": {
    "name": "Jack Domleo",
    "url": "https://jackdomleo.dev"
  },
  "main": "dist/component-library.ssr.js",
  "browser": "dist/component-library.esm.js",
  "module": "dist/component-library.esm.js",
  "unpkg": "dist/component-library.min.js",
  "types": "component-library.d.ts",
  "files": [
    "dist/*",
    "component-library.d.ts",
    "src/**/*.vue",
    "src/**/!(*.spec|*.stories).ts"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "npm run build",
    "serve": "start-storybook -p 6006",
    "serve:static": "npm run build:docs && http-server docs --port 6007 -a localhost",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup --config rollup.config.js",
    "build:docs": "rimraf docs && build-storybook --output-dir docs",
    "test": "jest",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:report": "open-cli report/index.html",
    "lint:check": "eslint --ext .ts,.js,.vue --ignore-path .eslintignore .",
    "lint:fix": "eslint --ext .ts,.js,.vue --fix --ignore-path .eslintignore .",
    "new-component": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./newComponent.ps1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/vue3": "^6.2.9",
    "@types/jest": "^26.0.23",
    "@types/jest-axe": "^3.5.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-typescript": "^4.5.13",
    "@vue/cli-plugin-unit-jest": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.6",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^7.9.0",
    "http-server": "^0.12.3",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "jest-stare": "^2.2.2",
    "minimist": "^1.2.5",
    "node-sass": "^6.0.0",
    "open-cli": "^6.0.1",
    "postcss": "^8.2.15",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass-loader": "^10.2.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4",
    "vue": "^3.0.11",
    "vue-jest": "^5.0.0-alpha.9",
    "vue-loader": "^16.2.0"
  },
  "peerDependencies": {
    "vue": "3.x"
  },
  "dependencies": {}
}
